@model string
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/ADD.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <a href="/">Back to the home page</a>
    <div class="container">

        <div class="form">
            <form action="/Home/AddPlayer" method="post">
                <p>Játékos neve:</p>
                <input type="text" name="PlayerName"  required/>
                <p>Nemzetiség:</p>
                <input type="text" name="Nationality" />
                <p>Rating:</p>
                <input type="number" name="Rating" />
                <p>WeakFoot:</p>
                <input type="number" name="WeakFoot" />
                <input type="hidden" name="TeamID" value="@Model" />
                <input type="submit" value="Küldés" />


            </form>
        </div>
    </div>
</body>
</html>