@model string 
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/ADD.css" rel="stylesheet" />
    <title>Add Team</title>
</head>
<body>
    <a href="/">Back to the home page</a>
    <div class="container">
        <h2>Adjon hozzá egy csapatot, a csapat az adatbázisban csak EGYSZER szerepelhet!</h2>
        <div class="form">
            <form action="/Home/AddTeam" method="post" >

                <p>Team Name</p>
                <input type="text" name="TeamID" required />
                <p>City</p>
                <input type="text" name="City" />
                <input type="hidden" name="LeagueID" value="@Model" />
                <input type="submit" value="ADD TEAM" />

            </form>

        </div>
    </div>

</body>
</html>