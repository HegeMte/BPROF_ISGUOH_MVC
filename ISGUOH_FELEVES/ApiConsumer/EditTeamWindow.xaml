        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApiConsumer"
        mc:Ignorable="d"
        Title="EditTeamWindow" Height="420" Width="516">
    <Grid>
        <Label Content="Edit Team" FontSize="20"  HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top"/>
        <Label Content="Team Name" FontSize="20" HorizontalAlignment="Left" Margin="27,111,0,0" VerticalAlignment="Top"/>
        <Label x:Name="TeamName" HorizontalAlignment="Left" Margin="220,111,0,0" VerticalAlignment="Top" Width="120" Height="37"/>
        <Label Content="City" FontSize="20" HorizontalAlignment="Left" Margin="27,0,0,0" VerticalAlignment="Center" Width="115"/>
